<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.recommenders</groupId>
		<artifactId>org.eclipse.recommenders.parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
	</parent>

	<groupId>org.eclipse.recommenders.feature</groupId>
	<artifactId>org.eclipse.recommenders.feature.parent</artifactId>
	<packaging>pom</packaging>

	<modules>
        <module>org.eclipse.recommenders.feature.rcp</module>
        <module>org.eclipse.recommenders.feature.rcp.source</module>
        <module>org.eclipse.recommenders.feature.rcp.core</module>
        <module>org.eclipse.recommenders.feature.rcp.core.source</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.intellig</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.intellig.source</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.intellig.e37</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.subwords</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.subwords.source</module>
		<module>org.eclipse.recommenders.feature.completion.rcp.subwords2</module>
        <module>org.eclipse.recommenders.feature.completion.rcp.chain</module>
        <module>org.eclipse.recommenders.feature.completion.rcp.chain.source</module>
        <module>org.eclipse.recommenders.feature.completion.rcp.chain.e37</module>
		<module>org.eclipse.recommenders.feature.extdoc.rcp</module>
		<module>org.eclipse.recommenders.feature.extdoc.rcp.source</module>
        <module>org.eclipse.recommenders.feature.3rd.orbit</module>
        <module>org.eclipse.recommenders.feature.3rd.rcp.nonorbit</module>
        <module>org.eclipse.recommenders.feature.3rd.rcp.nonjuno</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
			</plugin>
		</plugins>
        <pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-enforcer-plugin</artifactId>
					<configuration>
						<rules>
							<requireFilesExist>
								<files>
									<file>${basedir}/about.html</file>
									<file>${basedir}/feature.properties</file>
									<file>${basedir}/license.html</file>
									<file>${basedir}/epl-v10.html</file>
								</files>
							</requireFilesExist>
						</rules>
						<fail>true</fail>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
