<?eclipse version="3.4"?>
<plugin>
 <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="org.eclipse.recommenders.rcp.popup.javaeditor"
            targetID="#CompilationUnitEditorContext">
         <menu
               icon="icons/full/view16/slice.gif"
               id="org.eclipse.recommenders.rcp.category.popup"
               label="Recommenders"
               path="additions">
         </menu>
      </viewerContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.recommenders.rcp.popup.iproject"
            nameFilter="*"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               icon="icons/full/view16/slice.gif"
               id="org.eclipse.recommenders.rcp.category.popup"
               label="Recommenders"
               path="additions">
         </menu>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.recommenders.rcp.popup.icompilationunit"
            nameFilter="*"
            objectClass="org.eclipse.jdt.core.ICompilationUnit">
         <menu
               icon="icons/full/view16/slice.gif"
               id="org.eclipse.recommenders.rcp.category.popup"
               label="Recommenders"
               path="additions">
         </menu>
      </objectContribution>
      
   </extension>

   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.recommenders.internal.rcp.wiring.EclipseStartupHook">
      </startup>
   </extension>
   <extension
         point="org.eclipse.recommenders.injection.modules">
         <module
            class="org.eclipse.recommenders.internal.rcp.wiring.RecommendersModule">
      </module>
   </extension>
     <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.recommenders.rcp.category.views"
            name="Recommenders">
      </category>
   </extension>
     <extension
           point="org.eclipse.ui.preferencePages">
        <page
              class="org.eclipse.recommenders.internal.rcp.ui.PreferencePage"
              id="org.eclipse.recommenders.rcp.category.preferences"
              name="Code Recommenders">
        </page>
     </extension>
     <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="org.eclipse.recommenders.rcp.category.export"
            name="Code Recommenders">
      </category>
      </extension>
     <extension
           point="org.eclipse.core.runtime.preferences">
        <initializer
              class="org.eclipse.recommenders.internal.rcp.ui.PreferenceInitializer">
        </initializer>
     </extension>
</plugin>
