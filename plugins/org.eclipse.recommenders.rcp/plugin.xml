<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.eclipse.recommenders.preferenceContribution" name="Preference Contribution" schema="schema/preferenceContribution.exsd"/>
	<extension point="org.eclipse.ui.views">
		<category id="org.eclipse.recommenders.rcp.views.root"
			name="%views.root.name"/>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page id="org.eclipse.recommenders.rcp.preferencePages.root"
			class="org.eclipse.recommenders.injection.ExtensionFactory:org.eclipse.recommenders.internal.rcp.RootPreferencePage"
			name="%preferencePages.root.name"/>
	</extension>
	<extension point="org.eclipse.ui.intro.configExtension">
		<configExtension
			configId="org.eclipse.ui.intro.universalConfig"
			content="intro/overview.xml"/>
	</extension>
	<extension point="org.eclipse.recommenders.injection.modules">
		<module class="org.eclipse.recommenders.internal.rcp.RcpModule"/>
	</extension>
 <extension
       point="org.eclipse.recommenders.preferenceContribution">
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.openBrowser"
          icon="icons/obj16/homepage.png"
          label="Visit the &lt;a href=&quot;http://www.eclipse.org/recommenders/&quot;&gt;Project Homepage&lt;/a&gt;"
          priority="0">
    </preferenceContribution>
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.openBrowser"
          icon="icons/obj16/container_obj.gif"
          label="View the &lt;a href=&quot;http://www.eclipse.org/recommenders/manual/&quot;&gt;Project Manual&lt;/a&gt;"
          priority="0">
    </preferenceContribution>
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.openBrowser"
          icon="icons/obj16/favorite_star.png"
          label="&lt;a href=&quot;http://marketplace.eclipse.org/content/eclipse-code-recommenders&quot;&gt;Favorite us&lt;/a&gt; on the Eclipse Marketplace"
          priority="0">
    </preferenceContribution>
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.openBrowser"
          icon="icons/obj16/bird_blue_16.png"
          label="&lt;a href=&quot;http://twitter.com/recommenders&quot;&gt;Follow us&lt;/a&gt; on Twitter"
          priority="0">
    </preferenceContribution>
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.discoverNewExtensions"
          icon="icons/obj16/lightbulb.gif"
          label="&lt;a&gt;Discover new extensions&lt;/a&gt; to Code Recommenders"
          priority="0">
    </preferenceContribution>
    <preferenceContribution
          commandId="org.eclipse.recommenders.rcp.gotoPreferencePage"
          icon="icons/obj16/homepage.png"
          label="Go to: &lt;a href=&quot;org.eclipse.recommenders.completion.rcp.preferencePages.completions&quot;&gt;Intelligent Code Completion&lt;/a&gt;"
          priority="0">
    </preferenceContribution>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          defaultHandler="org.eclipse.recommenders.internal.rcp.ExtensionDiscoveryHandler"
          id="org.eclipse.recommenders.rcp.discoverNewExtensions"
          name="Discover New Extensions">
    </command>
    <command
          defaultHandler="org.eclipse.recommenders.internal.rcp.OpenBrowserHandler"
          id="org.eclipse.recommenders.rcp.openBrowser"
          name="Open Browser">
       <commandParameter
             id="org.eclipse.recommenders.rcp.command.href"
             name="URI"
             optional="false">
       </commandParameter>
    </command>
    <command
          defaultHandler="org.eclipse.recommenders.internal.rcp.PreferencePageHandler"
          id="org.eclipse.recommenders.rcp.gotoPreferencePage"
          name="Goto Preference Page">
       <commandParameter
             id="org.eclipse.recommenders.rcp.command.href"
             name="Preference Page ID"
             optional="false">
       </commandParameter>
    </command>
 </extension>
</plugin>
